{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe 生成活动文件",
			"command": "D:/MinGW-w64/bin/g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}\\*.cpp",
				//"${file}",
				"-o",
				"${workspaceFolder}\\${workspaceRootFolderName}.exe",
				//"${workspaceFolder}\\${workspaceRootFolderName}.exe",
				""
			],
			"options": {
				"cwd": "D:/MinGW-w64/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: D:/MinGW-w64/bin/g++.exe"
		}
	]
}